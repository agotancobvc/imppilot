{
    "name": "gait-metrics-backend",
    "version": "1.0.0",
    "type": "module",
    "scripts": {
        "dev": "nodemon --watch src --exec ts-node-esm src/app.ts",
        "build": "tsc",
        "start": "node dist/src/app.js",
        "test": "vitest run",
        "migrate": "prisma migrate deploy",
        "migrate:deploy": "prisma migrate deploy",
        "deploy:aws": "./deploy/deploy.sh",
        "deploy:build": "npm run build && npm run deploy:package",
        "deploy:package": "mkdir -p deploy/package && cp -r dist/* deploy/package/ && cp package*.json deploy/package/",
        "health:check": "curl -f http://localhost:3000/health || exit 1",
        "logs:cloudwatch": "aws logs tail /aws/ec2/gait-metrics-backend --follow",
        "stack:deploy": "aws cloudformation deploy --template-file deploy/cloudformation-template.yaml --stack-name gait-metrics-backend --capabilities CAPABILITY_IAM",
        "stack:delete": "aws cloudformation delete-stack --stack-name gait-metrics-backend"
    },
    "dependencies": {
        "@aws-sdk/client-dynamodb": "^3.600.0",
        "@aws-sdk/client-s3": "^3.600.0",
        "@aws-sdk/client-secrets-manager": "^3.600.0",
        "@aws-sdk/credential-providers": "^3.855.0",
        "aws-lambda": "^1.0.7",
        "@prisma/client": "^5.13.0",
        "bcryptjs": "^2.4.3",
        "compression": "^1.7.4",
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "express": "^5.0.2",
        "express-rate-limit": "^7.0.0",
        "helmet": "^7.0.0",
        "jsonwebtoken": "^9.0.1",
        "socket.io": "^4.7.2",
        "zod": "^3.23.8"
    },
    "devDependencies": {
        "@types/aws-lambda": "^8.10.143",
        "@types/bcryptjs": "^2.4.6",
        "@types/compression": "^1.7.5",
        "@types/cookie-parser": "^1.4.7",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/jsonwebtoken": "^9.0.2",
        "@types/node": "^20.14.10",
        "nodemon": "^3.0.3",
        "prisma": "^5.13.0",
        "supertest": "^7.1.4",
        "ts-node": "^10.9.2",
        "typescript": "^5.4.2",
        "vitest": "^1.5.0"
    }
}
