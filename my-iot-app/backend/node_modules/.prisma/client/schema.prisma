// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Clinic {
  id         String      @id @default(uuid())
  code       String      @unique
  name       String
  createdAt  DateTime    @default(now())
  clinicians Clinician[]
  patients   Patient[]
}

model Clinician {
  id            String         @id @default(uuid())
  clinic        Clinic         @relation(fields: [clinicId], references: [id])
  clinicId      String
  username      String         @unique
  passwordHash  String
  firstName     String
  lastName      String
  sessions      Session[]
  refreshTokens RefreshToken[]
}

model Patient {
  id        String    @id @default(uuid())
  clinic    Clinic    @relation(fields: [clinicId], references: [id])
  clinicId  String
  firstName String
  lastName  String
  mrn       String    @unique
  sessions  Session[]
}

model Session {
  id          String       @id @default(uuid())
  patient     Patient      @relation(fields: [patientId], references: [id])
  patientId   String
  clinician   Clinician    @relation(fields: [clinicianId], references: [id])
  clinicianId String
  startTime   DateTime     @default(now())
  endTime     DateTime?
  status      String       @default("active")
  metrics     GaitMetric[]
}

model GaitMetric {
  id        String  @id @default(uuid())
  session   Session @relation(fields: [sessionId], references: [id])
  sessionId String
  timestamp BigInt
  data      Json
}

model RefreshToken {
  token       String    @id
  clinician   Clinician @relation(fields: [clinicianId], references: [id])
  clinicianId String
  createdAt   DateTime  @default(now())
}
